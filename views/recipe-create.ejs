<h1 class="mb-4">Create New Recipe</h1>

<form id="recipeForm" action="/recipes" method="POST">
  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input
      type="text"
      id="title"
      name="title"
      class="form-control"
      value="<%= recipe.title || '' %>"
      required
    />
  </div>

  <div class="mb-3">
    <label for="ingredients" class="form-label">Ingredients</label>
    <textarea
      id="ingredients"
      name="ingredients"
      class="form-control"
      placeholder="Comma-separated list (e.g. Flour, Sugar, Eggs)"
      rows="2"
      required
    ><%= recipe.ingredients || '' %></textarea>
  </div>

  <div class="mb-3">
    <label for="steps" class="form-label">Steps</label>
    <textarea
      id="steps"
      name="steps"
      class="form-control"
      placeholder="Comma-separated list (e.g. Mix, Bake, Serve)"
      rows="3"
      required
    ><%= recipe.steps || '' %></textarea>
  </div>

  <div class="mb-3">
    <label for="imageUrl" class="form-label">Image URL</label>
    <input
      type="url"
      id="imageUrl"
      name="imageUrl"
      class="form-control"
      value="<%= recipe.imageUrl || '' %>"
      placeholder="https://..."
    />
  </div>

  <button type="submit" class="btn btn-primary">Create Recipe</button>
  <a href="/recipes" class="btn btn-secondary ms-2">Cancel</a>
</form>

